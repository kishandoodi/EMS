@model IEnumerable<WebApp_complete.EMP.State>



<h2>SortingState</h2>
@using (Html.BeginForm("SortingState", "EMP", FormMethod.Get))
{





    <b> Search Option: </b>

    @Html.TextBox("searching")
    <input type="submit" value="Search" />
    <br>
    <br>
    <table class="table">
        <tr>
            <th>
                StateName
            </th>
            <th>
                StateCode
            </th>
            <th></th>
        </tr>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        no match
                    </td>
                </tr>


            }
            else
            {

                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StateName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StateCode)
                        </td>

                    </tr>
                }

            }

        </tbody>

    </table>
}

<div>
    @Html.ActionLink("Back to List", "StateList")
</div>


