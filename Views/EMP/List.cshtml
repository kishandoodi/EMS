@model List<WebApp_complete.EMP.Employee>

@{
    ViewBag.Title = "Edit";
}
@using (Html.BeginForm("Sorting", "EMP", FormMethod.Get))
{


    <br>
    <b> Search Option: </b>

    @Html.TextBox("searching")
    <input type="submit" value="Search" />
    <br>

    <br>
    <table class="table">
        <tr>
        <tr>
            <th>Fname</th>
            <th>Lname</th>
            <th>Age</th>
            <th>Doj</th>
            <th>Pan</th>
            <th>Aadhar</th>
            <th>Salary</th>

            <th>AddressLine1</th>
            <th>AddressLine2</th>
            <th>ZipCode</th>
            <th>LandMark</th>
            <th>CountryName</th>
            <th>StateName</th>

            <th>Action</th>
        </tr>

        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        no match
                    </td>
                </tr>
            }
            else
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Doj)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pan)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Aadhar)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Salary)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Address.AddressLine1)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.AddressLine2)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.ZipCode)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.LandMark)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.Country.CountryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address.State.StateName)
                        </td>

                        <td>   <a href="@Url.Action("Edit", new { id = item.Empid }) " class="btn btn-success">Edit</a> </td>
                        <td>   <a href="@Url.Action("Delete", new { id = item.Empid })" class="btn btn-danger">delete</a></td>
                        <td>  <a href="@Url.Action("Details", new { item.Empid })" class="btn btn-primary">Details</a></td>


                    </tr>
                }
            }
        </tbody>
    </table>
}
