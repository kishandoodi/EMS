@model IEnumerable<WebApp_complete.EMP.Country>

@{
    ViewBag.Title = "CountryList";
}

@using (Html.BeginForm("SortingCountry", "EMP", FormMethod.Get))

{
    <br>
    <b> Search Option: </b>

    @Html.TextBox("searching")
    <input type="submit" value="Search" />
    <br>
    <br>
    <table class="table">
        <tr>
            <th>
                CountryName
            </th>
            <th>
               CountryCode
            </th>
            <th></th>
        </tr>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td>
                        no match
                    </td>
                </tr>


            }
            else
            {
                foreach (var item in Model)
                {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CountryCode)
                                </td>
                                <td>
                                    @Html.ActionLink("Update", "UpdateCountry", new { id = item.CountryId }) |

                                    @Html.ActionLink("Delete", "DeleteCountry", new { id = item.CountryId })
                                </td>
                            </tr>
                }
            }
                    </tbody>
    </table>
}